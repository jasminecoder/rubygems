        <div class="card mb-3">
            <div class="card-header">
                <%= link_to lesson.title, lesson_path(lesson) %>
            </div>
            <% if policy(lesson).show? %>
            <div class="card-body">
                <%= lesson.content %><br>
            </div>
            <% end %>
            <% if current_user && policy(lesson).edit? %>
            <div class="card-footer">
                <%= link_to 'Edit', edit_lesson_path(lesson), class: 'btn btn-sm btn-warning' %>
                <%= link_to 'Delete', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
            </div>
            <% end %>
        </div>