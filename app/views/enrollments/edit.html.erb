<% content_for :title do %>
Edit Enrollment:
<%= @enrollment %>
- Courses
<% end %>

<div class="row">
    <div class="col-md-12">
        <%= link_to 'Enrollment', enrollments_path %>
        <span class="mx-1 text-primary"> / </span>
        <%= link_to @enrollment.course.title, course_path(@enrollment.course) %>
        <span class="mx-1 text-primary"> /
            Edit
        </span>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-header">
                <h3>
                    <i class="fas fa-star text-warning"></i>
                    Add a review
                </h3>
            </div>
            <div class="card-body">
                <%= render 'form', enrollment: @enrollment %>
            </div>
        </div>
    </div>
</div>

<%= link_to 'Show Review', @enrollment %> |
<%= link_to 'Back To Course', course_path(@enrollment.course) %>