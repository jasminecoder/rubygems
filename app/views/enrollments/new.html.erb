<% content_for :title do %>
New Enrollment:
<%= @enrollment %>
- Courses
<% end %>

<div class="row">
    <div class="col-md-12">
        <%= link_to 'Enrollment', enrollments_path %>
        <span class="mx-1 text-primary"> /
            New
        </span>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-header">
                <h3>
                    <i class="fas fa-graduation-cap"></i>
                    Enrollment to <%= link_to @course.title, course_path(@course) %>
                </h3>
                <hr>
                <h3>
                    <i class="fas fa-lock-open"></i>
                    <%= link_to'Buy Course' %>
                </h3>
            </div>
            <div class="card-body">
                <%= form_tag course_enrollments_path(@course) do %>
                <%= submit_tag "Pay #{number_to_currency(@course.price)}", class: 'btn btn-sm btn-success' %>
                <% end %>
            </div>
        </div>
    </div>
</div>

<%= link_to 'Back', course_path(@course) %>